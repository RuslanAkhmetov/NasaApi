<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nasa_api" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


<!--        <item name="myColor">@color/my_color</item>
        <item name="myColor2">#FF0101</item>-->

        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="textInputStyle">@style/MyTextInputStyle</item>

        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearanceSmallComponent</item>
        <item name="bottomAppBarStyle">@style/MyAppBarStyle</item>
        <item name="tabStyle">@style/MyTabLayoutStyle</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
        <item name="materialCardViewStyle">@style/MyCardViewStyle</item>
        <!-- <item name="textAppearanceLabelLarge">@style/MyTextAppearanceBody2</item>-->

    </style>

    <style name="MyBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/MyActiveIndicatorStyle</item>
    </style>
    
    <style name="MyCardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/MyShapeAppearanceMediumComponent</item>
    </style>

    <style name="MyActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="android:color">?attr/colorPrimary</item>
    </style>
    
