    <style name="MyTabLayoutStyle" parent="@style/Widget.Material3.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>

    </style>

    <style name="MyAppBarStyle" parent="@style/Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/my_color</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyShapeAppearanceMediumComponent" >
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/aladin</item>
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.11785</item>
    </style>

    <style name="MyFirstTheme" parent="Base.Theme.Nasa_api" />

    <style name="MySecondTheme" parent="Base.Theme.Nasa_api" />

    <style name="MyThirdTheme" parent="Base.Theme.Nasa_api" />

    <style name="RedTheme" parent="MyFirstTheme">
        <item name="myColor">#FF0101</item>
    </style>

    <style name="GreenTheme" parent="MySecondTheme">
        <item name="myColor">#1E7320</item>
    </style>

    <style name="BlueTheme" parent="MyThirdTheme">
        <item name="myColor">#142542</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <!--    <item name="chipBackgroundColor">@drawable/my_selector_background_chip</item>-->
        <item name="rippleColor">#7C1293</item>
        <!-- <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>-->
        <item name="shapeAppearance">@style/MyShapeAppearanceSmallComponent</item>
    </style>

    <style name="MyTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="helperTextTextColor">#25447A</item>
    </style>

    <style name="Theme.Nasa_api" parent="Base.Theme.Nasa_api" />

