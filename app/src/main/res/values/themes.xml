        <item name="colorOnSecondary">@color/mars_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/mars_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/mars_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/mars_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/mars_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/mars_theme_light_tertiaryContainer</item>
